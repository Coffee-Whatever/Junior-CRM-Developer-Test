<Application x:Class="Junior_CRM_Developer_Test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Junior_CRM_Developer_Test"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="TextBrush">#e4e1f2</SolidColorBrush>
        <SolidColorBrush x:Key="TextHighlightBrush">#000</SolidColorBrush>
        <SolidColorBrush x:Key="BackBrush">#04020c</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryBrush">#262b4f</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBrush">#5a3bdb</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBrush">#3300fc</SolidColorBrush>
        <SolidColorBrush x:Key="YesBrush">Green</SolidColorBrush>
        <SolidColorBrush x:Key="YesHoverBrush">LimeGreen</SolidColorBrush>
        <SolidColorBrush x:Key="NoBrush">Red</SolidColorBrush>
        <SolidColorBrush x:Key="NoHoverBrush">OrangeRed</SolidColorBrush>
    </Application.Resources>
</Application>
